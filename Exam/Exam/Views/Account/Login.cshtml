@model LoginVM

<section class="container pt-5" style="height: 80vh;">
    <div class="card">
                <div class="card-body">
                  <h4 class="card-title mb-5">Login</h4>
                  <form method="post" class="forms-sample">
                    <div class="form-group">
                      <label asp-for="UserName"></label>
                      <input asp-for="UserName" value="" class="form-control mb-3">
                      <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="Password"></label>
                      <input asp-for="Password" value="" class="form-control mb-3">
                      <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-check form-check-flat form-check-primary">
                      <label asp-for="IsPersistent" class="form-check-label">
                        <input asp-for="IsPersistent" type="checkbox" class="form-check-input mb-3">
                        Remember me
                      </label>
                      <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-light" asp-area="" asp-controller="Home" asp-action="Index">Cancel</a>
                  </form>
                </div>
              </div>
</section>

@section Identity{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.js"></script>
}