@model RegisterVM

<section class="container pt-5" style="height: 80vh;">
    <div class="card">
                <div class="card-body">
                  <h4 class="card-title mb-5">Register</h4>
                  <form method="post" class="forms-sample">
                    <div class="form-group">
                      <label asp-for="Firstname"></label>
                      <input asp-for="Firstname" value="" class="form-control mb-3">
                      <span class="text-danger" asp-validation-for="Firstname"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="Lastname"></label>
                      <input asp-for="Lastname" value="" class="form-control mb-3">
                      <span class="text-danger" asp-validation-for="Lastname"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="UserName"></label>
                      <input asp-for="UserName" value="" class="form-control mb-3">
                      <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="Email"></label>
                      <input asp-for="Email" value="" class="form-control mb-3">
                      <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="Password"></label>
                      <input asp-for="Password" value="" class="form-control mb-3">
                      <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="ConfirmPassword"></label>
                      <input asp-for="ConfirmPassword" value="" class="form-control mb-3">
                      <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-light" asp-area="" asp-controller="Home" asp-action="Index">Cancel</a>
                  </form>
                </div>
              </div>
</section>