@using Services.Services
@inject SettingServices _service

@{
    Dictionary<string, string> settings = await _service.GetSettings();
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/assets/style/style.css">
    <title>Document</title>
</head>

<body>
    <header>
        <section class="navSection">
            <div class="container">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <div class="container-fluid">
                        <a class="navbar-brand navTitle" href="#">PETERNA</a>
                        <button class="navbar-toggler bg-white" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup"
                            aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
                            <div class="navbar-nav">
                                <a class="nav-link text-white" href="#">@settings["navitem1"]</a>
                                <a class="nav-link text-white" href="#">@settings["navitem2"]</a>
                                <a class="nav-link text-white" href="#">@settings["navitem3"]</a>
                                <a class="nav-link text-white" href="#">@settings["navitem4"]</a>
                                @if (User.Identity.IsAuthenticated)
                               {
                                   <a class="nav-link text-white" href="#">@User.Identity.Name</a>
                                    <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="logout">LOGOUT</a>
                                }
                                else
                                {
                                    <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Register">SIGN UP</a>
                                <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login">LOGIN</a>
                                }
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </section>
    </header>
    <main>
            @RenderBody()
        </main>
<footer>
    <section>
        <p>@settings["footer"]</p>
    </section>
</footer>
    <script src="https://kit.fontawesome.com/2ccc015245.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
    @RenderSection("Identity", required: false)
</body>
</html>
