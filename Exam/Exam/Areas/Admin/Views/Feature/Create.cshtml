@model Feature

<section class="container">
    <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Feature - Create</h4>
                  <form method="post" class="forms-sample">
                    <div class="form-group">
                      <label asp-for="Icon"></label>
                      <input asp-for="Icon" class="form-control">
                      <span class="text-danger" asp-validation-for="Icon"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="Title"></label>
                      <input asp-for="Title" class="form-control">
                      <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="Desc1">Description top</label>
                      <input asp-for="Desc1" class="form-control">
                      <span class="text-danger" asp-validation-for="Desc1"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="Desc2">Description bottom</label>
                      <input asp-for="Desc2" class="form-control">
                      <span class="text-danger" asp-validation-for="Desc2"></span>
                    </div>
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-light" asp-area="Admin" asp-controller="Feature" asp-action="Index">Cancel</a>
                  </form>
                </div>
              </div>
</section>