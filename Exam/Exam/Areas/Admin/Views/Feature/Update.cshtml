@model Feature

<section class="container">
    <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Feature - Update</h4>
                  <form method="post" class="forms-sample">
                    <div class="form-group">
                      <label for="featureIcon">Feature Icon</label>
                      <input name="featureIcon" value="@Model.Icon" id="featureIcon" class="form-control">
                      <span class="text-danger" asp-validation-for="Icon"></span>
                    </div>
                    <div class="form-group">
                      <label for="featureTitle">Feature Title</label>
                      <input name="featureTitle" value="@Model.Title" id="featureTitle" class="form-control">
                      <span class="text-danger" asp-validation-for="Icon"></span>
                    </div>
                    <div class="form-group">
                      <label for="featureDesc1">Feature Description top</label>
                      <input name="featureDesc1" value="@Model.Desc1" id="featureDesc1" class="form-control">
                      <span class="text-danger" asp-validation-for="Icon"></span>
                    </div>
                    <div class="form-group">
                      <label for="featureDesc2">Feature Description bottom</label>
                      <input name="featureDesc2" value="@Model.Desc2" id="featureDesc2" class="form-control">
                      <span class="text-danger" asp-validation-for="Icon"></span>
                    </div>
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-light" asp-area="Admin" asp-controller="Feature" asp-action="Index">Cancel</a>
                  </form>
                </div>
              </div>
</section>